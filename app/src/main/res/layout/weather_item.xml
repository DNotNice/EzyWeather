<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardWeather"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10sp"
    app:cardElevation="8dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/idCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/idTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="time"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTime"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/idCondition"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/idTemperature"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/LastUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idCondition"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="lastUpdated"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="5sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>